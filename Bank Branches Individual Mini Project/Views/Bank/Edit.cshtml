@model BankBranch

<div class="container">
    <h2>Edit Branch</h2>
    <form method="post">
        <div class="form-group">
            <label for="Name">Branch Name:</label>
            <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name">
        </div>
        <div class="form-group">
            <label for="Location">Location:</label>
            <input type="text" class="form-control" id="Location" name="Location" value="@Model.Location">
        </div>
        <div class="form-group">
            <label for="BranchManager">Branch Manager:</label>
            <input type="text" class="form-control" id="BranchManager" name="BranchManager" value="@Model.BranchManager">
        </div>
        <div class="form-group">
            <label for="EmployeeCount">Employee Count:</label>
            <input type="number" class="form-control" id="EmployeeCount" name="EmployeeCount" value="@Model.EmployeeCount">
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
        <a class="btn btn-secondary" asp-action="Index">Cancel</a>
    </form>
</div>