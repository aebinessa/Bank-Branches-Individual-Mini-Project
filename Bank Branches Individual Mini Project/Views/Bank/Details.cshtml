@model BankBranch

<h1>Branch Details</h1>

<div>
    <h4>Branch ID: @Model.Id</h4>
    <p>Branch Name: @Model.Name</p>
    <p>Location: @Model.Location</p>
    <p>Employee Count: @Model.Employees.Count</p>
    <p>Branch Manager: @Model.BranchManager</p>
</div>

<h2>Employees</h2>
@if (Model.Employees != null && Model.Employees.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Civil ID</th>
                <th>Position</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model.Employees)
            {
                <tr>
                    <td>@employee.Name</td>
                    <td>@employee.CivilId</td>
                    <td>@employee.Position</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No employees found for this branch.</p>
}

<a class="btn btn-primary" href="/Bank/AddEmployee/@Model.Id">Add Employee</a>
