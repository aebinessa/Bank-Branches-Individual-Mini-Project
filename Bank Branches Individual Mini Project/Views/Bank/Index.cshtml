@model BankDashboardViewModel


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="get" action="@Url.Action("Search", "Bank")" class="mb-3">
                <div class="input-group">
                    <input type="text" name="search" class="form-control" placeholder="Search by branch name">
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </form>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-12">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Branch Name</th>
                        <th>Branch Location</th>
                        <th>Branch Manager</th>
                        <th>Employee Count</th>
                        <th>Edit</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var branch in Model.BranchList)
                    {
                        <tr>
                            <td>@branch.Id</td>
                            <td><a href="Bank/details/@branch.Id">@branch.Name</a></td>
                            <td>@branch.Location</td>
                            <td>@branch.BranchManager</td>
                            <td>@branch.EmployeeCount</td>
                            <td><a href="Bank/Edit/@branch.Id">Edit info</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <a class="btn btn-outline-primary btn-block" href="Bank/AddBranch">Add Branch</a>
        </div>
    </div>
    
    <div class="row justify-content-center mt-5">
        <div class="col-md-12">
            <h3>Dashboard Information</h3>
            <table class="table table-striped table-bordered">
                <tbody>
                    <tr>
                        <td><strong>Total Branches</strong></td>
                        <td>@Model.TotalBranches</td>
                    </tr>
                    <tr>
                        <td><strong>Total Employees</strong></td>
                        <td>@Model.TotalEmployees</td>
                    </tr>
                    @if(Model.BranchWithMostEmployees != null)
                    {
                        <tr>
                            <td><strong>Branch with Most Employees</strong></td>
                            <td>@Model.BranchWithMostEmployees.Name</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
